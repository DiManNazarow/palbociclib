<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_marginBottom="8dp"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="8dp"
              android:layout_marginTop="16dp">

    <TextView
        android:id="@+id/item_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="@dimen/patient_card_left_margin"
        android:drawableRight="@drawable/ic_chevron_down_grey600_24dp"
        android:text="@string/oak_data"/>

    <android.support.v7.widget.CardView
        android:id="@+id/data_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:visibility="visible"
        card_view:cardElevation="3dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/last_oak_result"
                android:textColor="#4d5764"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <LinearLayout
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                android:orientation="horizontal"
                android:layout_below="@+id/title"
                android:layout_marginTop="@dimen/item_padding_small"/>

            <TextView
                android:id="@+id/cycle_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/cycle"
                android:drawablePadding="@dimen/item_padding_small"
                android:layout_below="@+id/divider"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/item_padding_small"
                tools:text="Цикл 1"/>

            <TextView
                android:id="@+id/date_oak_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_calender"
                android:layout_below="@+id/divider"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/item_padding_small"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/item_padding_small"
                tools:text="11.04.2017"/>

            <TextView
                android:id="@+id/drugs"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                tools:text="Нейтрофилы 1 623/мл\nТромбоциты 60 000/мл"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/item_padding_small"
                android:layout_below="@+id/cycle_text_view"
                style="@style/InfoText"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>