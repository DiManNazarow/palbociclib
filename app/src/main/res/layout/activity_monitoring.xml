<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/default_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="10sp"
                    android:text="Номер цикла"
                    android:textColor="#8b2c2424"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    />

                <Spinner
                    android:id="@+id/cycle_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </Spinner>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="16dp"
                    android:background="#ffa98c"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/default_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="10sp"
                    android:text="День ОАК"
                    android:textColor="#8b2c2424"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    />

                <Spinner
                    android:id="@+id/days_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </Spinner>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="16dp"
                    android:background="#ffa98c"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="10sp"
            android:text="Выберите текущую дозировку"
            android:textColor="#de52454a"
            android:textSize="14sp"
            android:textStyle="normal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/button_dose_125"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/round_pill"
                    android:src="@drawable/dose125"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#8a65c162"
                    android:lineSpacingExtra="10sp"
                    android:gravity="center_horizontal"
                    android:text="125 мг"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="44dp"
                android:gravity="center_horizontal">


                <ImageButton
                    android:id="@+id/button_dose_100"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/round_pill"
                    android:src="@drawable/dose100"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#8a65c162"
                    android:lineSpacingExtra="10sp"
                    android:gravity="center_horizontal"
                    android:text="100 мг"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="44dp"
                android:gravity="center_horizontal">


                <ImageButton
                    android:id="@+id/button_dose_75"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/round_pill"
                    android:src="@drawable/dose75"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#8a65c162"
                    android:lineSpacingExtra="10sp"
                    android:gravity="center_horizontal"
                    android:text="75 мг"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#de52454a"
            android:lineSpacingExtra="10sp"
            android:text="Укажите степень гематотоксичности"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:weightSum="4">

            <Button
                android:id="@+id/toxic_button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cycle_button"
                android:text="1"
                android:textColor="@color/green"/>

            <Button
                android:id="@+id/toxic_button_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cycle_button"
                android:textColor="@color/green"
                android:text="2"/>

            <Button
                android:id="@+id/toxic_button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cycle_button"
                android:textColor="@color/green"
                android:text="3"/>

            <Button
                android:id="@+id/toxic_button_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cycle_button"
                android:textColor="@color/green"
                android:text="4"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e9f2dd"
            android:layout_marginTop="@dimen/default_margin"/>

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/calculate_button"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="@dimen/default_margin"
                android:background="@color/calculate_button_background"
                android:text="Рассчитать приём"
                android:textColor="@color/white"
                android:visibility="visible"
                tools:visibility="gone"/>


            <LinearLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginTop="@dimen/default_margin"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="10sp"
                    android:text="Рекомендуемые действия:"
                    android:textColor="#de52454a"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    />

                <TextView
                    android:id="@+id/continue_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="@dimen/default_margin"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="6sp"
                    android:paddingLeft="@dimen/default_margin"
                    android:paddingRight="@dimen/default_margin"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#52454a"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    />

                <TextView
                    android:id="@+id/next_oak_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="6sp"
                    android:paddingLeft="@dimen/default_margin"
                    android:paddingRight="@dimen/default_margin"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#52454a"
                    android:textStyle="normal"
                    />

                <TextView
                    android:id="@+id/dop_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="6sp"
                    android:paddingLeft="@dimen/default_margin"
                    android:paddingRight="@dimen/default_margin"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#52454a"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</ScrollView>