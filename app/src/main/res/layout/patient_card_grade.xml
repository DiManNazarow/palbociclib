<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="16dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Начало приема"
            android:textColor="#4d5764"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="на 11.04.2014"
            android:textColor="#cc4d5764"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/title"
             />

        <TextView
            android:id="@+id/drugs"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            tools:text="Нейтрофилы 1 623/мл\nТромбоциты 60 000/мл"
            android:textColor="#cc4d5764"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintLeft_toLeftOf="@id/title"
            tools:layout_editor_absoluteX="8dp" />

        <ImageView
            android:id="@+id/drug_dose_image"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/dose125"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/drugs"
            app:layout_constraintLeft_toLeftOf="@id/title" />

        <TextView
            android:id="@+id/drug_dose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="100 мг"
            android:textColor="#838e98"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/drug_dose_image"
            app:layout_constraintTop_toTopOf="@+id/drug_dose_image"
            app:layout_constraintBottom_toBottomOf="@+id/drug_dose_image"
            android:layout_marginStart="10dp" />

        <ImageView
            android:id="@+id/oak_image"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:src="@drawable/raindrop"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/drugs"
            app:layout_constraintLeft_toRightOf="@+id/drug_dose"
            />

        <TextView
            android:id="@+id/oak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ОАК через 13 дней"
            android:textColor="#838e98"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/oak_image"
            app:layout_constraintTop_toTopOf="@+id/oak_image"
            app:layout_constraintBottom_toBottomOf="@+id/oak_image"
            android:layout_marginStart="10dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
